<div class="container">
  <div class="child-container">
     <%= link_to 'Add New Inventory', new_inventory_path, class: "btn" %>
  </div>
  <% @inventories.each do |inventory| %>
    <div class="card">
      <div>
        <h2><%= inventory.name%></h2>
        <%= button_to 'REMOVE', inventory_path(inventory.id), method: :delete, class: 'btn-link' %>
      </div>
      <p> <%= inventory.description%></p>
    </div>
  <% end%>
</div>
